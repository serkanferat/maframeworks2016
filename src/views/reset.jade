extends layout

block content
    .container
        .row
            div(class="col-sm-6 col-md-4 col-md-offset-4")
                block content
                    form(method='POST', target='/reset')
                        legend Reset Password
                        .form-group
                            label(for='password') New Password
                            input.form-control(type='password', placeholder='Password', required='', id="password", name="password")
                        .form-group
                            label(for='confirm') Confirm Password
                            input.form-control(type='password', placeholder='Password', required='', id="confirm", name="confirm")
                        .form-group
                            button.btn.btn-primary(type='submit') Update Password