extends layout

block content
    div(class="col-md-4")
        form(name='signInForm', action='/auth/login', method='post')
            div.form-group
                label(for="userName") Username
                    input(type="text", value=username , class="form-control", id="userName", name="userName", placeholder="Username", autofocus)

            div.form-group
                label(for="password") Password
                    input(type="password", class="form-control", id="password", name="password", placeholder="Password")


            div.checkbox
                label
                    input(type="checkbox")
                    | Remember Me


            button(type="submit", class="btn btn-default") Login
