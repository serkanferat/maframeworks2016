extends layout

block content
  .container
    .row
      div(class="col-sm-6 col-md-4 col-md-offset-4")
          form(name='signInForm', action='/auth/login', method='post', class="form-signin")

            input.form-control(type='text', placeholder='userName', required='', autofocus='', id="userName", name="userName" value="admin")
            input.form-control(type='password', placeholder='Password', required='', id="password", name="password" value="admin")

            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

            label.checkbox.pull-left
              input(type='checkbox', value='remember-me')
              |  Remember me
            a.btn.btn-link(href='/forgot') Forgot Password?
