extends layout

block content
    .container
        .row
            div(class="col-sm-6 col-md-4 col-md-offset-4")
                block content
                    form(method='POST')
                        legend Forgot Password
                        .form-group
                            label(for='email') Email
                            input.form-control(type='text', placeholder='Email', required='', id="email", name="email")
                        button.btn.btn-primary(type='submit') Reset Password
