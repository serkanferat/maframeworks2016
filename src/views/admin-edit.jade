doctype html
html( ng-app='CMS')
	head
		title= title
		link(rel="stylesheet", href="../bower_modules/bootstrap/dist/css/bootstrap.css")
		link(rel="stylesheet", href="../bower_modules/bootstrap/dist/css/bootstrap-theme.css")
		link(rel='stylesheet', href='../stylesheets/style.css')
	body(ng-controller='userController')
		div.container
			include partials/mainmenu
			form( ng-init="getUser('" + userid + "')")
				div.form-group
					label(for="username") Username:
						input(type="text", class="form-control", id="username", name="username", placeholder="Username", ng-model="User.username", autofocus)

				div.form-group
					label(for="password") Password:
						input(type="password", class="form-control", id="password", name="password", placeholder="Password", ng-model="User.password")
				div.form-group
					label(for="group") Group: (Admin/User/Author)
						input(type="group", class="form-control", id="group", name="group", placeholder="Admin/User/Author", ng-model="User.group")
						
				button( ng-click="updateUser(User)", class="btn btn-small btn-primary") Update User

		script(type="text/javascript", src="../bower_modules/angular/angular.min.js")
		script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.13/angular-ui-router.min.js')
		script(type="text/javascript", src="../js/app.module.js")
		script(type="text/javascript", src="../js/app.usercontroller.js")
		script(type="text/javascript", src="../js/app.userservice.js")


